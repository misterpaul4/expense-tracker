<div class="background body-background">
  <div class="d-flex flex-column justify-content-center align-items-center">

    <%= form_tag login_path, class: "w-100" do |form| %>
    <div class="primary-color pt-4 pb-2 px-3 d-flex justify-content-between align-items-center">
      <%= link_to welcome_path do %>
      <%= image_tag ("icons/back.svg") %>
      <% end %>

      <span class="nav-header text-white">LOGIN</span>

      <%= submit_tag "Log in", class: "submit-btn text-light" %>
    </div>

    <%= text_field_tag :username, "", class: "w-100 px-3 py-3 mt-3 border-0 mid-font", placeholder: "Username" %>
    <% end %>
    <%= link_to "Don't have an account?", signup_path, class: "mt-3 mid-font text-secondary" %>
    </div>
  </div>
</div>


