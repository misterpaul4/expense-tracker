<div class="background body-background">
  <div class="d-flex flex-column justify-content-center align-items-center">

    <%= form_tag login_path, class: "w-100" do |form| %>
    <div class="primary-color text-center position-relative py-3 text-light">
      <%= link_to 'Back', welcome_path, class: "position-absolute move-left text-light" %>
      <span class="text-light font-weight-bold up-font centered-text">LOGIN</span>
      <%= submit_tag "Log in", class: "position-absolute move-right text-light submit-btn" %>
    </div>

    <%= text_field_tag :username, "", class: "w-100 px-3 py-3 mt-3 border-0 mid-font", placeholder: "Username" %>
    <% end %>
    <%= link_to "Don't have an account?", signup_path, class: "mt-3 mid-font text-secondary" %>
    </div>
  </div>
</div>


