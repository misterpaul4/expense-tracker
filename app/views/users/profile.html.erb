<div class="position-absolute w-100">
  <div class="primary-color text-center position-relative py-3 text-light border-bottom border-light">
    <span class="text-light font-weight-bold up-font">PROFILE</span>
    <%= link_to logout_path, method: :delete do %>
    <span class="position-absolute move-right text-light">Logout (<%= current_user.username %>)</span>
    <% end %>
  </div>
</div>



<div class="grid-centered h-100 primary-color">
  <div class="grid-centered-item text-light">
    <%= image_tag ("profile.svg"), class: "profile-photo" %>
    <span class="up-font-2 pt-2"><%= current_user.username %></span>

    <div class="d-flex flex-column up-font pt-3">
      <div class="mt-3">
        <i class="fas fa-cogs"></i>
        <%= link_to 'Profile Settings', edit_user_path(current_user), class: "text-light" %>
      </div>

      <div class="my-3">
        <i class="fas fa-money-check-alt"></i>
        <%= link_to 'All My Transactions', transactions_path, class: "text-light" %>
      </div>

      <div>
        <i class="fas fa-external-link-alt font-up"></i>
        <%= link_to 'All External Transactions', external_transactions_path, class: "text-light" %>
      </div>

      <div class="mt-3">
        <i class="fas fa-layer-group font-up"></i>
        <%= link_to 'Expense Categories', expenses_path, class: "text-light" %>
      </div>
    </div>
  </div>
</div>