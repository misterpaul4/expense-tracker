<%= simple_form_for @expense, class: "w-100" do |f| %>
<div class="primary-color pt-4 pb-2 px-3 d-flex justify-content-between align-items-center">
  <%= link_to expenses_path do %>
  <%= image_tag ("icons/back.svg") %>
  <% end %>

  <span class="nav-header text-white">NEW CATEGORY</span>

  <%= f.submit 'Create', class: "submit-btn text-light" %>
</div>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
  <%= f.input :name, placeholder: "Name",label: false , input_html: { class: "w-100 px-3 py-3 mt-3 border-0 mid-font" } %>
  <%= f.input :icon, label: false, input_html: { class: "d-none" } %>
  <% end %>
